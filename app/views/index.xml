<Alloy>
	<Collection src="items"/>
	<Collection src="cart" />
	<TabGroup>
		<Tab title="Home" icon="KS_nav_ui.png">
			<Window title="Home Page">
				<TableView>
					<TableViewRow >
						<View height="80%">
							<ImageView image="/shopnow.png" onClick="categories" />
						</View>
					</TableViewRow>
					
					<TableViewRow >
						<View height="17%" onClick="about">
							<TextField value="One-Size Shop" editable="false"/>
						</View>
					</TableViewRow>
				</TableView>
			</Window>
		</Tab>
		
		<Tab title="Cart" icon="/cart.png">
			<Window title="My Cart">
				<View layout="horizontal">
					<TextArea font="" textAlign="left"   width="100dp" left="20dp" value="Item Name"/>
	        		<TextArea font="" textAlign="center" width="62dp"  left="73dp" value="Number"/>
	        		<TextArea font="" textAlign="right"  width="78dp"  left="0dp" value="Total Price"/>
	        		<Button title="Delete All" textAlign="center" left="70%" onClick="deleteAll"/>				
					<TableView dataCollection="cart" width="90%">
	        			<TableViewRow layout="horizontal"> 
	        				<TextArea font="" textAlign="left"   width="150dp" left="20dp" value="{item_name}"   />
	        				<TextArea font="" textAlign="center" width="12dp"  left="50dp" value="{item_number}" />
	        				<TextArea font="" textAlign="right"  width="50dp"  left="50dp" value="{total_price}" />
	        				<Button title="Delete" textAlign="center" left="85%" onClick="deleteOne"/>
	        			</TableViewRow>     
	        		</TableView>
        		</View>       			
			</Window>
		</Tab>
		
		<Tab title="Contact Us" icon="/contact.png">
			<Window title="Contact Us"> 
				<TableView >					
					<TableViewRow>
						<View layout="horizontal" height="50%">								
							<TextArea left="10dp" backgroundColor="transparent"
								value = "Eline Saarloos\nStudent number: 15501701\nCountry: Netherlands\nPhone: 5244 9691\nEmail: 15501701@life.hkbu.edu.hk" />							
							<ImageView image="/Eline.png" height= "120dp" width = "120dp" right="10dp"/>
						</View>
					</TableViewRow>
					
					<TableViewRow>
						<View layout="horizontal" height="50%">
							<ImageView image="/SunXiaomeng.jpg" height= "120dp" width = "120dp" left="10dp"/>
							<TextArea left="10dp" backgroundColor = "transparent" 
								value="Sun Xiaomeng\nStudent number: 12251216\nCountry: China\nPhone: 5612 7210\nEmail: 12251216@life.hkbu.edu.hk"/>
						</View>
					</TableViewRow>					
				</TableView>
			</Window>
		</Tab>
	</TabGroup>
</Alloy>