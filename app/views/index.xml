<Alloy>
	<Collection src="items"/>
	<TabGroup>
		<Tab title="Home" icon="KS_nav_ui.png">
			<Window title="Home Page">
				<TableView>
					<TableViewSection>
						<TableViewRow >
							<View id="view" layout="vertical" height="50%" />
							<ImageView id="homeImage" image="/shopnow.png" onClick="categories" />
						</TableViewRow>
					
						<TableViewRow >
							<View id="view" layout="vertical" height="50%" />
							<ImageView id="homeImage" image="/sale.png"/>
						</TableViewRow>
					
					</TableViewSection>
					</TableView>
			</Window>
		</Tab>
		
		<Tab title="Tab 2" icon="KS_nav_views.png">
			<Window title="Tab 2">
				<TableView dataCollection="items" >  
        			<TableViewRow layout="vertical"> 
        				<Label text="{name}"/>
        				<Label text="{id}"/>
        				<Label text="{number}"/>
        			</TableViewRow>            
        		</TableView>	
			</Window>
		</Tab>
	</TabGroup>
</Alloy>