<Alloy>
	<Collection src="items"/>
	<Window backgroundColor="white">
		<TableView dataCollection="items" dataFilter="showDetails">
			<TableViewRow layout="vertical" height="100%">
				<ImageView  image="{images}" height="350dp" width="250dp" top="25dp" />
				<Label  text="{name}"  /> 
				<Label  text="{price}" />
				<Label  text="{info}"  />			
			</TableViewRow>
		</TableView>
		<Label  text="Please input the number from 1 to 9" top="82%" />
		<TextField id="textarea" borderColor="#000" width="30dp" textAlign="center" top="87%" maxLength="1" />				
		<Button title="Add to cart" top="90%" width="100dp" height="50dp" onClick="addItem" />	
	</Window>
</Alloy>