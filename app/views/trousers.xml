<Alloy>
	<Collection src="items"/>
    <Window backgroundColor="white" exitOnClose="true" title="Trousers">
  		<TableView dataCollection="items" dataFilter="showCatagory" dataTransform="addPath" onClick="showItem">
  			<TableViewRow layout="vertical" pid="{id}" height="50%">
            	<ImageView image="{imagesWithPath}" height="200dp" width="150dp" top="10%" />
            	<Label text="{name}"/>
            	<Label text="{price}"/>
            </TableViewRow>
        </TableView>
    </Window>
</Alloy>