<Alloy>
	<Collection src="items"/>
    <Window id="win" backgroundColor="white" exitOnClose="true" title="Trousers">
  		<TableView dataCollection="items" dataFilter="showCatagory" dataTransform="addPath" onClick="showItem">
  			<TableViewRow layout="vertical" pid="{id}">
            	<ImageView image="{imagesWithPath}" height="200dp" width="150dp" top="50dp" left="100dp" />
            	<Label text="{name}"/>
            	<Label text="{price}"/>
            </TableViewRow>
        </TableView>
    </Window>
</Alloy>